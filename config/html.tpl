<html style='height: 90%%'>
    <head>
        <style>
            body { height: 100%%; font-size: 0.8em; }
            h2 { color: #666; text-decoration: underline; }
            hr { border-top: 1px dashed #aaa; border-bottom: none; }
            table { height: 80%%; width: 100%%; }
            td { vertical-align: top; }
            td.logo { background-color: #eaeaea; }
            td.body { padding-right: 10px; width: 100%%; }
            div.head { font-weight: bold; font-size: 1.2em; color: #333; text-decoration: underline; }
            div.sect { padding: 10px; }
            div.cont { box-shadow: 10px 10px 5px #888888; border: 2px solid #ddd; border-radius: 15px; padding: 15px;  }
            div.part { margin: 5px; }
            span.greeter { font-style: italic; }
            span.footer { color: #999; }
        </style>
    </head>
    <body>
        <table>
            <tr>
                <td class="body">
                    <h2>%1$s</h2>
                    <p>%2$s</p><br/>
                    <p>%3$s</p><br/>
                    <hr/><span class="greeter">%4$s</span>
                    <hr/><br/><span class="footer">%5$s</span>
                </td>
                <td class="logo">
                    <img src="http://company.com/logotype.png"/>
                </td>
            </tr>
        </table>
    </body>
</html>
